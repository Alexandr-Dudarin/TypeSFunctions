{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "jsx": "preserve",
    "lib": ["ES6"],
    "skipLibCheck": true,
    "noEmitOnError": true 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}